\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Definición de KPI
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Ticket Medio 
\shape italic
\size tiny
\color brown

\begin_inset Formula 
\begin{equation}
TM\,=\frac{Cantidad\,Vendida\,Periodo}{Total\,Tickets\,Periodo}\label{eq: Ticket Medio}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Cifra de Ventas
\shape italic
\size tiny
\color brown

\begin_inset Formula 
\begin{equation}
CV\,=Precio*Cantidad\,Vendida\,Periodo\label{eq: Cifra de Ventas}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Margen Comercial
\shape italic
\size tiny
\color brown

\begin_inset Formula 
\begin{equation}
MC\,=\frac{\left(Precio-Costo\right)*Cantidad\,Vendida\,Periodo}{Precio*Cantidad\,Vendida\,Periodo}*100\label{eq:Margen Comercial}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Rotación de Stock
\shape italic
\size tiny
\color brown

\begin_inset Formula 
\begin{equation}
RS\,=\frac{Total\,Ventas\,Periodo}{\left(\frac{Stock\,Inicial\,Periodo+Stock\,Final\,Periodo}{2}\right)}\label{eq:Rotación Stock}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Coeficiente de Rentabilidad
\shape italic
\size tiny
\color brown

\begin_inset Formula 
\begin{equation}
CR=\left(\left(Precio-Costo\right)*Cantidad\,Vendida\,Periodo\right)*RS\label{eq:Coeficiente Rentabilidad}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize
Cobertura de Stock
\shape italic
\size tiny
\color brown

\begin_inset Formula 
\begin{equation}
CS\,=\frac{Stock\,Actual\,Periodo}{Promedio\,Cantidad\,Venta\,Ultimos\,N\,Periodos}\label{eq:Cobertura Stock}
\end{equation}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

