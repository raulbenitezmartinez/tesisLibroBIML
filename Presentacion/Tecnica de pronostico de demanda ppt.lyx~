\series bold
\size tiny
for cada producto:
\end_layout

\begin_deeper
\begin_layout LyX-Code

\series bold
\size tiny
obtener KPIs del período actual finalizado;
\end_layout

\begin_layout LyX-Code

\series bold
\size tiny
ejecutar su mejor clasificador (KPIs);
\end_layout

\begin_layout LyX-Code

\series bold
\size tiny
obtener etiqueta {nada,poco,medio,mucho}
\end_layout

\begin_layout LyX-Code

\series bold
\size tiny
extrapolar a valores continuos(criterio experto);
\end_layout

